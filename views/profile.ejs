<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> 
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Lobster&family=Playfair+Display&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1> YOUR LIBRARY</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
       
        
          <h2>Name your Books</h2>
        <% if (user.local.email) { %>
          <form action="/personal" method="POST">
            <input class="icon" class="number1" placeholder="Page reference" name="pageNum" type="number" />
            <input class="icon" type="text" placeholder="Name of your book" name="msg">
            <br>
            <button class="btns" type="submit">Submit</button>
          </form>
        </div>
        <% } %>

        <div>
          <h3>Library </h3>
          <ul class="personal">
          <%
            let sum = 0  
           for(var i=0; i<personal.length; i++) { 
            sum +=parseInt(personal[i].pageNum)
            %>
            <li class="personals">
              <span><%= personal[i].msg %></span>
              <span><%= personal[i].pageNum %></span>
              <span><i  class="fa fa-book" aria-hidden="true">delete</i></span>
              <span><i class="icon"  aria-hidden="true"></i></span>
              <span class="updatePage" ><i class="fa fa-bookmark">update your page</i></span>
              <span>
                <div class="updatePageDiv hidden" >
                <input class="pageNumberInput"  type="number"></input> </span>
              <span><i class="fa fa-check"></i></span>
            </div>
            </li>
          <% } %>
          </ul>
          TotalPages: <%= sum %>

</div>

<script src="main.js"></script>

</body>
</html>
